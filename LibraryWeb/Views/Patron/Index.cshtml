@using LibraryWeb.Models.PatronModels;
@model PatronIndexModel

<div>
    <h3>Patron Index</h3>
    <div>
        <table class="table table-striped" id="catalogIndexTable">
            <thead>
                <tr>
                    <th>
                        Profile Link
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Library Card Id
                    </th>
                    <th>
                        Overdue Fees
                    </th>
                    <th>
                        Home Library
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patron in Model.Patrons)
                {
                    <tr>
                        <td>
                            <a asp-controller="Patron" asp-action="Details" asp-route-patronId="@patron.Id">
                                (Profile)
                            </a>                            
                        </td>
                        <td>
                            @patron.LastName
                        </td>
                        <td>
                            @patron.FirstName
                        </td>
                        <td>
                            @patron.LibraryCardId
                        </td>
                        <td>
                            @patron.Fees.ToString("c")
                        </td>
                        <td>
                            @patron.HomeLibrary
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>